// Sections --------------------------------
.container {
  max-width 1280px
  width 100%
  margin-left auto
  margin-right auto
}

.section {
  position relative

  display block
  width 100%
  height 100%

  box-sizing border-box

  &:before, &:after {
    content ''
    display block
    clear both
  }
  +mod('banner'){
    height: 100vh;
    background-image: url('../images/background/main.png');
    background-position: 100% 100%;
    background-repeat: no-repeat;
    background-size: 50%;

    @media only screen and (min-width: 320px) {
      grid(100%)
      padding: 20px 15px;
    }
    @media only screen and (min-width: 1024px) {
      width: 95%;
      padding: 80px 60px;
    }
  }
}
