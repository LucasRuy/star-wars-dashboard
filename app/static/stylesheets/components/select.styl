.select {
  position: relative;
  display: block;
  width: 100%;
  height: 40px;

  padding: 12px 15px;
  margin: 10px 0px;

  border: 1px solid c-border-2;
  border-radius: 4px;

  color: c-text-2;
  transition: t-default;

  font-size: 12px;

  &::placeholder {
    color: c-text-3;
  }
  &:focus {
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    outline: none;
  }
  +el('value') {
    grid(90%)
    text-align: left;
  }
  +el('icon') {
    grid(10%)
    text-align: right;
    svg {
      display: inline-block;
      width: 12px;
      height: 12px;
    }
  }
  +el('infos') {
    position: relative;
    z-index: 2;
  }
  +el('options') {
    position: absolute;
    top: 0%;
    left: 0px;
    z-index: 1;

    display: block;
    width: 100%;

    border-left: 1px solid c-border-2;
    border-right: 1px solid c-border-2;
    border-bottom: 1px solid c-border-2;
    border-radius: 0px 0px 4px 4px;

    line-height: 22px;
    transition: t-default;

    opacity: 0;
    user-select: none;
    visibility: hidden;

    &.is-active {
      top: 100%;
      opacity: 1;
      user-select: initial;
      visibility: visible;

      .x-select__options__item {
        cursor: pointer;
        background-color: c-white;
        &:hover {
          background-color: c-border-2;
        }
      }
    }

    +el('item') {
      padding: 5px 10px;
      transition: t-default;
      cursor: default;
    }
  }
}
