.field {
  display: block;
  width: 100%;

  padding: 12px 15px;
  margin: 10px 0px;

  border: 1px solid c-blue;
  border-radius: 4px;

  color: c-blue;
  transition: t-default;
  font-family: raleway;

  &::placeholder {
    color: c-text;
  }
  &:focus {
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    color: c-blue;
    outline: none;
  }
}
