section(class='x-section section--banner', id='banner')

  div(class='banner')
    h2(class='banner__title') Star Wars Dashboard
    p(class='banner__text') Search your favorite pearson

    input(type='text', class='field', placeholder='Insert ID off your pearson')

    ul(class='banner__result')
      h3(class='banner__result__title') Suggestion
      li(class='banner__result__item')
        div(class='result-item')
          h4(class='result-item__name') Pearson Name
          div(class='result-item__infos')
            p(class='result-item__infos__item') Height:
              span 172
            p(class='result-item__infos__item') Mass:
              span 77
            p(class='result-item__infos__item') Hair color:
              span Blond
            p(class='result-item__infos__item') Birth Year:
              span 19BBY
            p(class='result-item__infos__item') Gender:
              span male
